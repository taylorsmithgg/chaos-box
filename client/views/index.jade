template(name="index")
  title Chaos Box Mods, LLC.
  // Menu
  nav#theMenu.menu
    .menu-wrap
      i.fa.fa-times.menu-close
      h1.logo
        .centered
          img(src='../img/symbol.png' style="height:32px; width:32px;")
          a.scroll(href='#home') CHAOS BOX MODS
      a.scroll(href='#home') Home
      a.scroll(href='#about') About
      a.scroll(href='#portfolio') Retailers
      a.scroll(href='#services') Product
      a.scroll(href='#contact') Contact
      a(target='_blank' href='http://www.facebook.com/chaosboxmods')
        i.fa.fa-facebook
      a(href='#')
        i.fa.fa-twitter
      a(href='#')
        i.fa.fa-dribbble
      a(href='mailto:chaosboxmods@gmail.com')
        i.fa.fa-envelope
  // Menu button
  .navbar-fixed-top
    .container-fluid
      ul.nav.navbar-nav
        li
          #menuToggle
            i.fa.fa-bars
        if isInRole 'admin'
          li
            a(href='/admin') Admin Console
          li
            a(href='/products') Shop
        else if isInRole 'vendor'
          li
            a(href='/products') Shop
      .navbar-right
        {{> loginButtons}}
  section#home(name='home')
  #headerwrap(data-stellar-background-ratio='0.5')
    .container
      .row
        .col-md-6.col-md-offset-3
          h1 CHAOS BOX MODS, LLC.
      // --/row --
    // --/container --
  // --/headerwrap --
  section#about(name='about')
  #aboutwrap
    .container
      .row
        .col-lg-4.name
        .col-lg-4.name
          {{> about}}
  // /aboutwrap
  // -- ABOUT SEPARATOR --
  .sep.about(data-stellar-background-ratio="0.5")
  // -- PORTFOLIO SECTION --
  section#portfolio(name='portfolio')
  {{> retailers}}
  .container
    .row.mt.centered
      h1 INTERESTED IN BECOMING A RETAILER?
      .col-lg-4.proc
        i.fa.fa-coffee
        h3 Appointments
        p
          | Appointments can be easily scheduled from our site, via Google Calendar.
      .col-lg-4.proc
        i.fa.fa-cogs
        h3 Product
        p
          | We always keep a large supply of our devices on hand in order to provide fast delivery to retailers. 
      .col-lg-4.proc
        i.fa.fa-heart
        h3 Customer Service
        p
          | We provide outstanding customer service to both our retailers and end users with superb convienence.
      // --/row --
    // --/container --
  // --/Portfoliowrap --
  // -- PORTFOLIO SEPARATOR --
  section#services(name='services')
  .sep.portfolio(data-stellar-background-ratio="0.5")
  // -- SERVICE SECTION --
  #servicewrap
    .container
      .row
        .col-lg-8-offset-2.centered
          h1 PRODUCT OVERVIEW
          h3 Vape safe, strong, and reliably
        // /col-lg-8
      // --/row --
      .row.mt
        .col-lg-3.service
          i.fa.fa-star
          p
            | COMPETITION QUALITY
            br
            small Best materials, best endurance
          p.text
            | We only use the highest quality materials in order to provide a product that will perform better and outlast the competition.
        .col-lg-3.service
          i.fa.fa-cloud
          p
            | CLOUDS
            br
            small Efficiency, Engineering
          p.text
            | High conductivity + Minimal Voltage Drop = Best Quality Clouds
        .col-lg-3.service
          i.fa.fa-shield
          p
            | Protection
            br
            small Warranty, Safety
          p.text
            | All our devices come with a limited lifetime warranty and are inspected to ensure your safety.
        .col-lg-3.service
          i.fa.fa-thumbs-up
          p
            | 100% SATISFACTION
            br
            small Quality products, customer service
          p.text
            | We strive to provide our customers with the best quality and service in the industry.
      // --/row --
    // --/container --
  // --/servicewrap --
  #testimonials
    .container
      .row
        .col-lg-8.col-lg-offset-2
          {{> disclaimer}}
        // --/col-lg-8 --
      // --/row --
    // --/container --
  // --/testimonials --
  // -- SERVICE SECTION --
  // -- CONTACT SEPARATOR --
  .sep.about(data-stellar-background-ratio='0.5')
  section#contact(name='contact')
  #contactwrap
    .container
      .row
        .col-lg-6
          p CONTACT US
          p
            small.
              Sales: Sales@chaosboxmods.com
          p
            small.
              Service: Service@chaosboxmods.com
          p
            small.
              Wholesale:â€‹ Wholesale@chaosboxmods.com
          p
            small Mail. 
              |ChaosBoxMods@Gmail.com
          a(target='_blank' href='http://www.facebook.com/chaosboxmods')
            i.fa.fa-facebook
          a(href="mailto:chaosboxmods@gmail.com")
            i.fa.fa-envelope
          small
        small
          .col-lg-6
            form(role='form')
              .form-group
                label(for='exampleInputName1') Your Name
                input#exampleInputEmail1.form-control(type='email', placeholder='Enter name')
                label(for='exampleInputEmail1') Email address
                input#exampleInputEmail1.form-control(type='email', placeholder='Enter email')
                label(for='exampleInputText1') Message
                textarea.form-control(rows='3')
              button.btn.btn-default(type='submit' disabled="true") Submit
      // --/row --
      small
    // /container
  script.
    $('#menuToggle, .menu-close').on('click', function () {
      $('#menuToggle').toggleClass('active');
      $('body').toggleClass('body-push-toleft');
      $('#theMenu').toggleClass('menu-open');
    });
    $('body').attr('data-spy', 'scroll');
    $('body').attr('data-offset', '0');
    $('body').attr('data-target', '#theMenu')
    $(function () {
      $.stellar({
        horizontalScrolling: false,
        verticalOffset: 40
      });
    });
    $(".scroll").click(function (event) {
      event.preventDefault();
      $('html,body').animate({scrollTop: $(this.hash).offset().top}, 1000);
    });